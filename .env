# ============================================
# Server Configuration
# ============================================
PORT=8080
SPRING_PROFILES_ACTIVE=dev

# ============================================
# Database Configuration
# ============================================
DB_URL=jdbc:mysql://localhost:3306/ai_movie?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DB_NAME=ai_movie
DB_USERNAME=root
DB_PASSWORD=annguyen199
DB_PORT=3306

# ============================================
# JWT Configuration
# ============================================
# Generate a secure random string for production
JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION_MS=86400000

# ============================================
# Video Upload Configuration
# ============================================
APP_VIDEO_UPLOAD_DIR=uploads/videos
APP_UPLOAD_MAX_FILE_SIZE=2147483648
APP_ALLOWED_VIDEO_FORMATS=mp4,mkv,avi,mov,wmv,flv,webm
APP_VIDEO_TEMP_DIR=uploads/temp
APP_VIDEO_PROCESSING_TIMEOUT=3600

# ============================================
# Image Upload Configuration
# ============================================
APP_IMAGE_UPLOAD_DIR=uploads/images
APP_IMAGE_MAX_FILE_SIZE=10485760
APP_ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,bmp,webp

# ============================================
# AI Service Configuration
# ============================================
AI_SERVICE_BASE_URL=http://localhost:3000
AI_SERVICE_TIMEOUT=30
AI_SERVICE_CONFIDENCE_THRESHOLD=0.7

# ============================================
# CORS Configuration
# ============================================
APP_CORS_ALLOWED_ORIGINS=https://www.phimnhalam.website,https://phimnhalam.website,https://cdn.phimnhalam.website,http://localhost:3000,http://localhost:5173

# ============================================
# CDN Configuration
# ============================================
APP_CDN_BASE_URL=https://cdn.phimnhalam.website

# ============================================
# Cloud Storage Configuration (Cloudflare R2)
# ============================================
# Set to true to enable cloud storage, false to use local storage
APP_STORAGE_CLOUD_ENABLED=false

# Cloudflare R2 Endpoint (replace <your-account-id> with your actual account ID)
# Format: https://<account-id>.r2.cloudflarestorage.com
APP_STORAGE_CLOUD_ENDPOINT=https://<your-account-id>.r2.cloudflarestorage.com

# R2 Bucket Name
APP_STORAGE_CLOUD_BUCKET=<your-bucket-name>

# R2 Access Key ID (from Cloudflare Dashboard > R2 > Manage R2 API Tokens)
APP_STORAGE_CLOUD_ACCESS_KEY=<replace-with-access-key>

# R2 Secret Access Key (from Cloudflare Dashboard > R2 > Manage R2 API Tokens)
APP_STORAGE_CLOUD_SECRET_KEY=<replace-with-secret-key>

# R2 Region (usually "auto" for Cloudflare R2)
APP_STORAGE_CLOUD_REGION=auto

# Cloud storage folder structure
APP_STORAGE_CLOUD_IMAGE_FOLDER=images
APP_STORAGE_CLOUD_VIDEO_FOLDER=videos

